<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenedzerZadan" >

    <TextView
        android:id="@+id/telephoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="50dp"
        android:text="Menedzer Zadan"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <Button
        android:id="@+id/addDayTaskButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/telephoneNumberTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:background="@drawable/but1"
        android:text="Dodaj dzien zadan" />

    <Button
        android:id="@+id/editDayTaskButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/addDayTaskButton"
        android:layout_below="@+id/addDayTaskButton"
        android:layout_marginTop="34dp"
        android:background="@drawable/but1"
        android:text="Edytuj dzien zadan" />

</RelativeLayout>